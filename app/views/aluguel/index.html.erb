            </td>
        </tr>                   
           
        <% CasaAlugar.all.each do |casa_alugar| %>

                <tr>
                    <td class="image">
                        <a href="/_buy/casa">
                            <img src="assets/paisagem3.jpg">
                        </a>
                    </td>
                    <td >
                        <%= casa_alugar.metragem %>m²
                    </td>
                    <td >
                        <%= casa_alugar.local %>
